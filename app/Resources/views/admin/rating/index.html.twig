{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_product_index' %}

{% block main %}
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">{{ 'title.news_list'|trans }}</strong>
                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Title</th>
                                        <th>Content</th>
                                        <th>Rating</th>
                                        <th>{{ 'label.published_at'|trans }}</th>
                                        <th>{{ 'label.actions'|trans }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for row in objects %}
                                    <tr>
                                        <td>{{ row.getProduct() }}</td>
                                        <td>{{ row.getName() }}</td>
                                        <td>{{ row.getEmail() }}</td>
                                        <td>{{ row.getTitle() }}</td>
                                        <td>{{ row.getContents() }}</td>
                                        <td>{{ row.getRating() }}</td>
                                        <td>
                                            <label class="switch switch-text switch-primary switch-pill">
                                                <input type="checkbox" class="switch-input" {{ row.getEnable() ? 'checked="true"' : '' }}>
                                                <span data-on="On" data-off="Off" class="switch-label"></span>
                                                <span class="switch-handle"></span>
                                            </label>
                                        </td>
                                        <td>
                                            <div class="item-actions">
                                                <a href="{{ path('admin_product_edit', {id: row.id}) }}" class="btn-sm">
                                                    <i class="fa fa-edit" aria-hidden="true"></i>
                                                </a>
                                                
                                                {{ include('admin/product/_delete_form.html.twig', {object: row}, with_context = false) }}
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
